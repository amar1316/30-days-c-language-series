/* Break and Continue program using c language */

/* 1.  Stop loop when negative number is entered (break)
   2.  Print only odd numbers (using continue)
*/


#include <stdio.h>

int main()
{
    for(int i = 1; i <= 10; i++) {
        if(i == 5) {
            break;             // stops iteration
        }
        printf("%d\n", i);
    }

    for(int i = 1; i <= 10; i++) {
        if(i == 5) {
            continue;   // skips this iteration
        }
        printf("%d\n", i);
    }



   /*
    int num;
    while(1) {  // infinite loop
        printf("Enter a number (negative to stop): ");   //Stop loop when negative number is entered (break)
        scanf("%d", &num);

        if(num < 0) {
            break;  // stop the loop
        }
        printf("You entered: %d\n", num);
    } */



/*
  for(int i =1;i<=10;i++)
  {
      if(i%2==0)
      {
          continue;
      }
      printf("%d\n",i);
  }*/

    return 0;
}

